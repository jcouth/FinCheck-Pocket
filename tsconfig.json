{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "__mocks__",
    ".bundle",
    ".github",
    ".husky",
    ".vscode",
    "android",
    "coverage",
    "ios",
    "node_modules",
    "babel.config.js",
    "commitlint.config.mjs",
    "eslint.config.mjs",
    "index.js",
    "jest.config.mjs",
    "jest.setup.js",
    "metro.config.js",
    "prettier.config.mjs"
  ]
}
